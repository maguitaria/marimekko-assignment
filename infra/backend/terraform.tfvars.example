########################################
#  Marimekko Wholesale — Terraform Variables Example
# Copy this file to terraform.tfvars (and edit values before apply)
########################################

# Base project name used for all resources (function, storage, etc.)
project_name        = "marimekko"

# Azure Resource Group name
resource_group_name = "rg-marimekko"

# Azure region (e.g., West Europe, North Europe, etc.)
location            = "West Europe"

# Deployment environment
environment         = "dev"

#  JWT secret for signing authentication tokens
# DO NOT commit real secrets — replace before `terraform apply`
# Generate HS256 token here: https://www.jwt.io/ 
jwt_secret = "replace-me"

#  Base catalog JSON — shared product data before client adjustments
# This can be defined inline (here) or loaded from file using `file("backend/config/clientA.json")`
base_catalog_json = <<EOF
[
  { "id": "SKU-1", "name": "Unikko Tote", "basePrice": 45, "baseStock": 50 },
  { "id": "SKU-2", "name": "Siirtolapuutarha Mug", "basePrice": 12.5, "baseStock": 120 },
  { "id": "SKU-3", "name": "Poppy Scarf", "basePrice": 30, "baseStock": 20 }
]
EOF

#  Client configuration mapping
# Includes both descriptive metadata and short login codes
# Please change the passwords to your at "1111"
client_map_json = <<EOF
{
  "client-a": {
    "name": "Client A",
    "pricing": { "type": "multiplier", "value": 0.90 },
    "stock":   { "type": "cap", "value": 40 }
  },
  "client-b": {
    "name": "Client B",
    "pricing": { "type": "multiplier", "value": 1.10 },
    "stock":   { "type": "cap", "value": 15 }
  },
  "1111": "client-a",
  "1111": "client-b"
}
EOF

#  Allowed CORS origin for frontend
# Replace with your deployed frontend URL (e.g. Azure Static Web App)
cors_allow_origin = "https://your-frontend.azure.app"
